				valor[i] = 42889.2258;
				break;

			case 9:
				valor[i] = 46251.174;
				break;

			case 10:
				valor[i] = 11191.4722;
				break;
	
			case 11:
				valor[i] = 0.0;
	
			case 12:
				valor[i] = 0.0;
				break;
	
			case 13:
				valor[i] = 3847.4823;
				break;
	
			case 14:
				valor[i] = 373.7838;
				break;
		
			case 15:
				valor[i] = 2659.7563;
				break;
	
			case 16:
				valor[i] = 48924.2448;
				break;

			case 17:
				valor[i] = 18419.2614;
				break;
	
			case 18:
				valor[i] = 0.0;
				break;
	
			case 19:
				valor[i] = 0.0;
				break;
	
			case 20:
				valor[i] = 35240.1826;
				break;
	
			case 21:
				valor[i] = 43829.1667;
				break;
	
			case 22:
				valor[i] = 18235.6852;
				break;
	
			case 23:
				valor[i] = 4355.0662;
				break;
	
			case 24:
				valor[i] = 13327.1025;
				break;
	
			case 25:
				valor[i] = 0.0;
				break;
	
			case 26:
				valor[i] = 0.0;
				break;
	
			case 27:
				valor[i] = 25681.8318;
				break;

			case 28:
				valor[i] = 1718.1221;
				break;
	
			case 29:
				valor[i] = 13220.495;
				break;
	
			case 30:
				valor[i] = 8414.61;
				break;
		}
		
		if(valor[i] > 0){
			total = total + valor[i];
			k++;
		
			if(valor[i] > maior_valor)
				maior_valor = valor[i];
			
			if(valor[i] < menor_valor)
				menor_valor = valor[i];
			
		}
	}
	
	media = total / k;
	
	for(int i = 1; i < 31; i++){
		if(valor[i] > media)
			j++;
	}
	
	cout << "O menor valor de faturamento eh: " << menor_valor;
	cout << "\n\nO maior valor de faturmamento eh: " << maior_valor;
	cout << "\n\nO numero de dias no mes em que o valor diario superou a medial mensal eh: " << j << endl;
	return 0;
}
