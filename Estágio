int main(){
	float valor[30], media = 0, total = 0, menor_valor = 9999, maior_valor = 0;
	int dia = 0, k = 0, j = 0;
	
	for(int i = 1; i < 31; i++){
		dia = i;
		
		switch(dia){
			case 1:
				valor[i] = 22174.1664;
				break;
	
			case 2:
				valor[i] = 24537.6698;
				break;
	
			case 3:
				valor[i] = 26139.6134;
				break;
	
			case 4:
				valor[i] = 0.0;
				break;
	
