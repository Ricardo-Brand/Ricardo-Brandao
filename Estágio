// Exercício 1
#include <iostream>

using namespace std;

int main(){
	int INDICE = 13, SOMA = 0, K = 0;
	
	while(K < INDICE){
		K = K + 1;
		SOMA = SOMA + K;
	}
	
	cout << "O valor final eh: " << SOMA;
	
	return 0;
}




// Exercício 2
#include <iostream>

using namespace std;

int main(){
	int num, fibonacci = 0, aux1 = 0, aux2 = 1;
	
	cout << "Digite um numero inteiro para verificar se faz parte da sequencia de fibonacci: ";
	cin >> num;
	
	while(fibonacci < num){
		fibonacci = aux1 + aux2;
		
		aux1 = aux2;
		aux2 = fibonacci;
	}
	
	if(fibonacci == num)
		cout << "\n\nO numero informado pertence a sequencia!!!\n";
	else
		cout << "\n\nO numero informado nao pertence a sequencia!!!\n";
	
	return 0;
}



// Exercício 3
#include <iostream>

